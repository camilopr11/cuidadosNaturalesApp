        <activity android:name=".ManageEncyclopediaActivity" />
        <activity android:name=".ManagePlantsActivity" />
        <activity android:name=".PlantListActivity" />
        <activity android:name=".PlantsActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>